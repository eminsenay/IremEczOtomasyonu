<Window x:Class="IremEczOtomasyonu.UI.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:ui="clr-namespace:IremEczOtomasyonu.UI"
        Title="Satış Ekranı" Height="450" Width="900" Closed="Window_Closed" WindowStartupLocation="CenterOwner"
        Icon="/IremEczOtomasyonu;component/Images/eczane_logo.gif">
    <Grid Name="saleGrid">
        <ui:UserControlSales x:Name="userControlSales" Margin="0,0,0,35" />
        <Button Name="okButton" Content="Tamam" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,93,6" 
                Width="75" Height="23" Click="OkButton_Click" />
        <Button Name="cancelButton" Content="İptal" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,6" 
                Width="75" Height="23" IsCancel="True" />
    </Grid>
</Window>
