<Window x:Class="IremEczOtomasyonu.WebcamImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Görüntüsü" Height="480" Width="640"
        WindowStartupLocation="CenterOwner" Icon="/IremEczOtomasyonu;component/Images/eczane_logo.gif">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Name="webcamImage" Grid.Row="0" Stretch="Uniform" />
        <Button Name="useImageButton" Grid.Row="1" Width="100" Height="23" Content="Bu resmi kullan" Margin="0,6,118,6" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsDefault="True" Click="UseImageButton_Click" />
        <Button Name="grabAnotherImageButton" Grid.Row="1" Width="100" Height="23" Content="Yeni bir tane çek" Margin="0,6,12,6" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsCancel="True" Click="GrabAnotherImageButton_Click" />
    </Grid>
</Window>
